{
    "id" : "io.github.noobping.PasswordStore",
    "appdata-license" : "GLP-3.0",
    "tags" : [
        "desktop",
        "git",
        "gnome",
        "manager",
        "pass",
        "password",
        "password-manager",
        "password-store",
        "rust",
        "security",
        "ssh",
        "store"
    ],
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "passwordstore",
    "finish-args" : [
        "--device=dri",
        "--filesystem=home/.gnupg",
        "--filesystem=home/.git/config:ro",
        "--filesystem=home/.password-store",
        "--filesystem=home/.gnupg",
        "--persist=home/.password-store",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=gpg-agent",
        "--socket=session-bus",
        "--socket=ssh-auth",
        "--socket=wayland",
        "--talk-name=io.github.noobping.PasswordStore",
        "--talk-name=io.github.noobping.PasswordStore.SearchProvider",
        "--talk-name=org.freedesktop.secrets"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "passwordstore",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "./"
                }
            ]
        }
    ]
}
